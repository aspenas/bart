# BART PWA Production Environment Variables Template
# Copy this to .env.production and fill in actual values
# DO NOT commit .env.production to source control

# API Configuration
VITE_API_BASE_URL=http://localhost:3000
VITE_API_TIMEOUT=30000

# Salesforce OAuth Configuration (Required)
VITE_SALESFORCE_CLIENT_ID=
VITE_SALESFORCE_REDIRECT_URI=https://bart.kindhome.com/oauth/callback
VITE_SALESFORCE_LOGIN_URL=https://login.salesforce.com

# Feature Flags
VITE_ENABLE_BART_PILOT=false
VITE_ENABLE_OAUTH=true
VITE_ENABLE_MONITORING=true

# Monitoring Configuration
VITE_CLOUDWATCH_REGION=us-east-1
VITE_CLOUDWATCH_LOG_GROUP=/aws/bart/pwa
VITE_ERROR_RATE_THRESHOLD=5

# Performance Settings
VITE_MAX_SYNC_BATCH_SIZE=100
VITE_SYNC_RETRY_ATTEMPTS=3
VITE_SYNC_TIMEOUT=30000
VITE_CACHE_TTL=300000

# Security Headers
VITE_CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' http://localhost:3000 https://*.salesforce.com"

# Sentry Error Tracking (Optional)
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_RELEASE=