# Local Development Environment Variables
# Copy this file to .env.local and update values as needed

# API Configuration
VITE_API_BASE_URL=http://localhost:3000
VITE_API_TIMEOUT=30000

# Salesforce OAuth Configuration (Development)
VITE_SALESFORCE_CLIENT_ID=your_dev_client_id_here
VITE_SALESFORCE_REDIRECT_URI=http://localhost:5173/oauth/callback
VITE_SALESFORCE_LOGIN_URL=https://test.salesforce.com

# Feature Flags
VITE_ENABLE_BART_PILOT=true
VITE_ENABLE_OAUTH=true
VITE_ENABLE_MONITORING=false

# Development Settings
VITE_LOG_LEVEL=debug
VITE_ENABLE_MOCK_DATA=true

# Performance Settings
VITE_MAX_SYNC_BATCH_SIZE=50
VITE_SYNC_RETRY_ATTEMPTS=3
VITE_SYNC_TIMEOUT=30000
VITE_CACHE_TTL=300000

# Optional: Sentry for Development (leave blank to disable)
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_RELEASE=